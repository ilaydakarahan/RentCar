@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">

    <form class="bg-light p-5 contact-form" method="post">
        <div class="form-group">
            <h5 class="alert alert-info mb-2"> Araç Rezervasyon Formu</h5>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" readonly value="@ViewBag.id" asp-for="CarId" placeholder="Almak İstediğiniz Araba">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Name" placeholder="Adınız">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınız">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email Adresiniz">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Phone" placeholder="Telefon Numaranız">
        </div>
        <div class="form-group">
            <select asp-items="@ViewBag.Locations" asp-for="PickupLocationId" id="drop1" class="form-control">
                <option>Nereden Alıcaksınız?</option>
            </select>
        </div>
        <div class="form-group">
            <select asp-items="@ViewBag.Locations" asp-for="DropOffLocationId" id="drop2" class="form-control">
                <option>İade Edilecek Lokasyonu Seçiniz</option>
            </select>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Age" placeholder="Yaşınız">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="DriverLicenseYear" placeholder="Ehliyet Yılınız">
        </div>
        <div class="form-group">
            <textarea cols="30" rows="7" class="form-control" asp-for="Description" placeholder="Varsa eklemek istedikleriniz"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>
</div>

