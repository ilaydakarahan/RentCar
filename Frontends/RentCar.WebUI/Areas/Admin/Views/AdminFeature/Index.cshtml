@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araba Özellikleri</h4>
                <p class="card-subtitle mb-4">
                    Araba özellikleri ile ilgili ekleme, silme, güncelleme ve listeleme gibi işlemleri bu sayfa üzerinden gerçeleştirebilirsiniz. Tema da veri tutarlılığını sağlayabilmek için lütfen 3'ün katı şeklin de veri girişi yapınız.
                </p>
                <div class="table-responsive">

                    @if (Model.Count > 0 && Model.Any())
                    {
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Özellik</th>
                                    <th colspan="2" class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Name</td>
                                        <td style="width:100px">
                                            <a href="/Admin/AdminFeature/RemoveFeature/@item.FeatureId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a>

                                        </td>
                                        <td style="width:150px"><a href="/Admin/AdminFeature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success"> <i class="fa fa-edit"></i>  Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="container">
                            <div class="container-fluid">
                                <div class="alert alert-info"><span>Araç Özelliği Bulunamadı</span></div>                                
                            </div>
                        </div>
                    }
                    <br />

                    <a href="/Admin/AdminFeature/CreateFeature/" class="btn btn-success">Yeni Özellik Girişi</a>

                </div>
            </div>
        </div>
    </div>
</div>




