@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sosyal Medya Hesap Linkleri Yönetimi</h4>
                <p class="card-subtitle mb-4">
                    Kullandığınız sosyal medya hesaplarına ait bilgileri yönetebileceğiniz sayfadır.
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Aç</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td><a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a></td>
                                    <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success"><i class="fa fa-edit"></i> Güncelle</a></td>
                                    <td><a href="@item.Url" target="_blank" class="btn btn-outline-dark"><i class="fa fa-open"></i> Aç</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/AdminSocialMedia/CreateSocialMedia" class="btn btn-outline-primary"><i class="fa fa-pen"></i> Yeni Sosyal Medya Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

