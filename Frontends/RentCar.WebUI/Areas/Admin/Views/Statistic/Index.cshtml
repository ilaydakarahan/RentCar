                        <div class="progress-bar bg-light" role="progressbar" style="width: @ViewBag.rnd14%;"></div>
                    </div>
                </div>
            </div>
        </div> <!-- elektrikli araçlar-->

        <div class="col-md-6 col-xl-3">
            <div class="card bg-warning border-warning">
                <div class="card-body">
                    <div class="mb-4">
                        <span class="badge badge-soft-light float-right">Günlük Kiralama Fiyatı</span>
                        <h5 class="card-title mb-0 text-white">En Pahalı Araç</h5>
                    </div>
                    <div class="row d-flex align-items-center mb-4">
                        <div class="col-8">
                            <h4 class="d-flex align-items-center text-white mb-0">
                                @ViewBag.brandAndModelByRentPriceDailyMax
                            </h4>
                        </div>
                        <div class="col-4 text-right">
                            <span class="text-white-50">@ViewBag.rnd15% <i class="mdi mdi-arrow-up"></i></span>
                        </div>
                    </div>

                    <div class="progress badge-soft-light shadow-sm" style="height: 7px;">
                        <div class="progress-bar bg-light" role="progressbar" style="width: @ViewBag.rnd15%;"></div>
                    </div>
                </div>
            </div>
        </div> <!--en pahalı aracın markası-->

        <div class="col-md-6 col-xl-3">
            <div class="card bg-info border-info">
                <div class="card-body">
                    <div class="mb-4">
                        <span class="badge badge-soft-light float-right">Günlük Kiralama Fiyatı</span>
