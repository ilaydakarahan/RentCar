                            <h2 class="d-flex align-items-center mb-0 text-white">
                                # @ViewBag.brandCount
                            </h2>
                        </div>
                        <div class="col-4 text-right">
                            <span class="text-white-50">@ViewBag.rnd5% <i class="mdi mdi-arrow-up"></i></span>
                        </div>
                    </div>

                    <div class="progress badge-soft-light shadow-sm" style="height: 5px;">
                        <div class="progress-bar bg-light" role="progressbar" style="width: @ViewBag.rnd5%;"></div>
                    </div>
                </div>
            </div>
        </div> <!-- marka sayısı-->

        <div class="col-md-6 col-xl-3">
            <div class="card bg-success border-success">
                <div class="card-body">
                    <div class="mb-4">
                        <span class="badge badge-soft-light float-right">Günlük Kiralama</span>
