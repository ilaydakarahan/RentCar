@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="mt-4">
    <div class="row">
        <div class="col-md-6 col-xl-3">
            <div class="card bg-primary border-primary">
                <div class="card-body">
                    <div class="mb-4">
                        <span class="badge badge-soft-light float-right">Aktif Araçlar</span>
                        <h5 class="card-title mb-0 text-white">Toplam Araç Sayısı</h5>
                    </div>
                    <div class="row d-flex align-items-center mb-4">
                        <div class="col-8">
                            <h2 class="d-flex align-items-center mb-0 text-white">
                                # @ViewBag.carCount
                            </h2>
                        </div>
                        <div class="col-4 text-right">
                            <span class="text-white-50">@ViewBag.rnd1 % <i class="mdi mdi-arrow-up"></i></span>
                        </div>
                    </div>

                    <div class="progress badge-soft-light shadow-sm" style="height: 5px;">
                        <div class="progress-bar bg-light" role="progressbar" style="width: @ViewBag.rnd1%;"></div>
                    </div>
                </div>
            </div>
        </div> <!-- araç sayısı-->

        <div class="col-md-6 col-xl-3">
            <div class="card bg-success border-success">
                <div class="card-body">
                    <div class="mb-4">
                        <span class="badge badge-soft-light float-right">Mevcut Lokasyonlar</span>
                        <h5 class="card-title mb-0 text-white">Lokasyon Sayısı</h5>
                    </div>
                    <div class="row d-flex align-items-center mb-4">
                        <div class="col-8">
                            <h2 class="d-flex align-items-center text-white mb-0">
                                # @ViewBag.locationCount
                            </h2>
                        </div>
                        <div class="col-4 text-right">
                            <span class="text-white-50">@ViewBag.rnd2% <i class="mdi mdi-arrow-down"></i></span>
                        </div>
                    </div>

                    <div class="progress badge-soft-light shadow-sm" style="height: 7px;">
                        <div class="progress-bar bg-light" role="progressbar" style="width: @ViewBag.rnd2%;"></div>
                    </div>
                </div>
            </div>
        </div> <!-- lokasyon sayısı -->

        <div class="col-md-6 col-xl-3">
            <div class="card bg-warning border-warning">
                <div class="card-body">
                    <div class="mb-4">
                        <span class="badge badge-soft-light float-right">Yazar-Personel Sayısı</span>
                        <h5 class="card-title mb-0 text-white">Toplam Personel</h5>
                    </div>
                    <div class="row d-flex align-items-center mb-4">
                        <div class="col-8">
                            <h2 class="d-flex align-items-center text-white mb-0">
                                # @ViewBag.authorCount
                            </h2>
                        </div>
                        <div class="col-4 text-right">
                            <span class="text-white-50">@ViewBag.rnd3% <i class="mdi mdi-arrow-up"></i></span>
                        </div>
                    </div>

                    <div class="progress badge-soft-light shadow-sm" style="height: 7px;">
                        <div class="progress-bar bg-light" role="progressbar" style="width: @ViewBag.rnd3%;"></div>
                    </div>
                </div>
            </div>
        </div> <!-- yazar sayısı-->

        <div class="col-md-6 col-xl-3">
            <div class="card bg-info border-info">
                <div class="card-body">
                    <div class="mb-4">
                        <span class="badge badge-soft-light float-right">Tüm Zamanlar</span>
                        <h5 class="card-title mb-0 text-white">Toplam Blog Sayısı</h5>
                    </div>
                    <div class="row d-flex align-items-center mb-4">
                        <div class="col-8">
                            <h2 class="d-flex align-items-center text-white mb-0">
                                # @ViewBag.blogCount
                            </h2>
                        </div>
                        <div class="col-4 text-right">
                            <span class="text-white-50">@ViewBag.rnd4% <i class="mdi mdi-arrow-down"></i></span>
                        </div>
                    </div>

                    <div class="progress badge-soft-light shadow-sm" style="height: 7px;">
                        <div class="progress-bar bg-light" role="progressbar" style="width: @ViewBag.rnd4%;"></div>
                    </div>
                </div>
            </div>
        </div> <!-- blog sayısı-->

    </div>

    <div class="row">
        <div class="col-md-6 col-xl-3">
            <div class="card bg-primary border-primary">
                <div class="card-body">
                    <div class="mb-4">
                        <span class="badge badge-soft-light float-right">Aktif Markalarımız</span>
